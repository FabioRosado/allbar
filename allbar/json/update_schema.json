{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "http://rh.io/json-schema/allbar-update-0.0.1.json",
    "title": "Update Record",
    "description": "Update Record for the AllBar macOS Status Bar Multi Tool.",
    "type": "object",
    "properties": {
        "ttl": {
            "title": "Time To Live",
            "description": "The time this data is valid for in seconds.",
            "type": "integer",
            "minimum": 0
        },
        "indicators": {
            "oneOf": [
                {
                    "title": "Status Bar Indicator Strings",
                    "description": "A list of strings to show in the status bar. Rotated one per second.",
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "type": "string",
                        "minLength": 1
                    }
                },
                {
                    "title": "Status Bar Indicator Icon/Title Combos",
                    "description": "A list of icon/title combos to show in the status bar. Rotated one per second.",
                    "type": "array",
                    "minItems": 1,
                    "oneOf": [
                        {
                            "items": {
                                "type": "object",
                                "properties": {
                                    "icon": {
                                        "type": "null"
                                    },
                                    "title": {
                                        "type": "string",
                                        "minLength": 1
                                    }
                                },
                                "required": ["icon", "title"]
                            }
                        },
                        {
                            "items": {
                                "type": "object",
                                "properties": {
                                    "icon": {
                                        "type": "string",
                                        "pattern": "^data:image/png;base64,"
                                    },
                                    "title": {
                                        "type": "null"
                                    }
                                },
                                "required": ["icon", "title"]
                            }
                        },
                        {
                            "items": {
                                "type": "object",
                                "properties": {
                                    "icon": {
                                        "type": "string",
                                        "pattern": "^data:image/png;base64,"
                                    },
                                    "title": {
                                        "type": "string"
                                    }
                                },
                                "required": ["icon", "title"]
                            }
                        }
                    ]
                }
            ]
        },
        "menu": {
            "title": "Menu Items",
            "description": "The list of menu items to show. Without 'Preferences' nor 'Quit', which are hard-coded.",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "title": {
                        "type": "string"
                    },
                    "active": {
                        "type": "boolean"
                    }
                },
                "required": ["title", "active"],
                "oneOf": [
                    {
                        "properties": {
                            "open": {
                                "type": "string",
                                "format": "uri"
                            }
                        },
                        "required": ["open"]
                    },
                    {
                        "properties": {
                            "request": {
                                "type": "object",
                                "properties": {
                                    "method": {
                                        "type": "string",
                                        "default": "GET"
                                    },
                                    "url": {
                                        "type": "string",
                                        "format": "uri"
                                    },
                                    "headers": {
                                        "type": "object",
                                        "patternProperties": {
                                            "^[Cc]ontent-[Tt]ype$": {
                                                "type": "string",
                                                "enum": [
                                                    "application/json",
                                                    "application/x-www-form-urlencoded"
                                                ]
                                            }
                                        },
                                        "additionalProperties": {"type": "string"}
                                    },
                                    "body": {
                                        "type": "object"
                                    }
                                },
                                "required": ["url"]
                            },
                            "prompt": {
                                "type": "object",
                                "properties": {
                                    "title": {
                                        "type": "string"
                                    },
                                    "message": {
                                        "type": "string"
                                    },
                                    "placeholder": {
                                        "type": "string",
                                        "default": "prompt"
                                    }
                                },
                                "required": ["title", "message", "placeholder"]
                            }
                        },
                        "required": ["request"]
                    }
                ]
            }
        }
    },
    "required": ["ttl", "indicators", "menu"]
}
